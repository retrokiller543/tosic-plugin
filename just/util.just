# =============================================================================
# Utility Commands - Project Management & Information
# =============================================================================

# Utility aliases
alias clean-a := clean-all
alias status := project-status
alias deps := deps-tree
alias ver := version

# =============================================================================
# Cleanup Commands
# =============================================================================

# üßπ Clean all build artifacts
[group('util')]
clean:
    #!/usr/bin/env bash
    echo "{{BOLD}}{{YELLOW}}üßπ Cleaning build artifacts...{{NORMAL}}"
    
    cargo clean
    
    echo "{{BOLD}}{{GREEN}}‚úÖ Build artifacts cleaned{{NORMAL}}"

# üßπ Deep clean (everything including registry cache)
[group('util')]
clean-all:
    #!/usr/bin/env bash
    echo "{{BOLD}}{{YELLOW}}üßπ Deep cleaning all artifacts...{{NORMAL}}"
    
    # Clean cargo build artifacts
    cargo clean
    
    # Clean test and coverage artifacts
    just test-clean
    
    # Clean documentation
    just docs-clean
    
    # Clean cross-compilation artifacts
    just cross-clean
    
    # Clean any generated files
    rm -f Cargo.lock.bak
    rm -f licenses.html
    rm -f API_SUMMARY.md
    rm -rf dist/
    
    echo "{{BOLD}}{{GREEN}}‚úÖ Deep clean completed{{NORMAL}}"

# =============================================================================
# Project Information
# =============================================================================

# üìä Show project status
[group('util')]
project-status:
    #!/usr/bin/env bash
    echo "{{BOLD}}{{CYAN}}üìä Tosic Plugin Project Status{{NORMAL}}"
    echo "{{BOLD}}{{CYAN}}=============================={{NORMAL}}"
    echo ""
    
    echo "{{YELLOW}}Project Structure:{{NORMAL}}"
    if command -v tree &> /dev/null; then
        tree crates/ -I target -L 2 2>/dev/null
    else
        find crates/ -type d -not -path "*/target/*" | head -10
    fi
    echo ""
    
    echo "{{YELLOW}}Workspace Packages:{{NORMAL}}"
    cargo metadata --format-version 1 --no-deps | grep '"name"' | head -10
    echo ""
    
    echo "{{YELLOW}}Rust Toolchain:{{NORMAL}}"
    rustc --version
    cargo --version
    echo ""
    
    echo "{{YELLOW}}Git Status:{{NORMAL}}"
    git status --porcelain | head -10 || echo "Not a git repository"

# üîç Show dependency information
[group('util')]
deps-tree *args="":
    #!/usr/bin/env bash
    echo "{{BOLD}}{{CYAN}}üîç Dependency Tree{{NORMAL}}"
    echo "{{BOLD}}{{CYAN}}================{{NORMAL}}"
    echo ""
    
    cmd="cargo tree"
    
    # Add any additional args
    if [ -n "{{args}}" ]; then
        cmd="$cmd {{args}}"
    else
        cmd="$cmd --depth 1"
    fi
    
    eval $cmd

# üìã Show detailed dependency info
[group('util')]
deps-info:
    #!/usr/bin/env bash
    echo "{{BOLD}}{{CYAN}}üìã Detailed Dependency Information{{NORMAL}}"
    echo "{{BOLD}}{{CYAN}}================================={{NORMAL}}"
    echo ""
    
    echo "{{YELLOW}}üå≥ Full Dependency Tree:{{NORMAL}}"
    cargo tree
    echo ""
    
    echo "{{YELLOW}}üîÑ Duplicate Dependencies:{{NORMAL}}"
    cargo tree --duplicates
    echo ""
    
    echo "{{YELLOW}}üìä Dependency Statistics:{{NORMAL}}"
    cargo tree --format '{p}' | sort | uniq | wc -l | xargs echo "Total unique dependencies:"

# =============================================================================
# Version Management
# =============================================================================

# üìà Show version information
[group('util')]
version:
    #!/usr/bin/env bash
    echo "{{BOLD}}{{CYAN}}üìà Version Information{{NORMAL}}"
    echo "{{BOLD}}{{CYAN}}===================={{NORMAL}}"
    echo ""
    
    echo "{{YELLOW}}Package Versions:{{NORMAL}}"
    grep -r "version" crates/*/Cargo.toml | grep -v "rust-version" | head -10
    echo ""
    
    echo "{{YELLOW}}Git Information:{{NORMAL}}"
    git describe --tags --always 2>/dev/null || echo "No git tags found"
    git rev-parse --short HEAD 2>/dev/null || echo "Not a git repository"

# üìà Set version for all crates
[group('util')]
set-version new_version:
    #!/usr/bin/env bash
    echo "{{BOLD}}{{YELLOW}}üìà Setting version to {{new_version}} for all crates...{{NORMAL}}"
    
    # Update root Cargo.toml
    sed -i.bak 's/version = "[^"]*"/version = "{{new_version}}"/' Cargo.toml
    
    # Update each crate
    find crates -name Cargo.toml -exec sed -i.bak 's/version = "[^"]*"/version = "{{new_version}}"/' {} \;
    
    # Clean up backup files
    find . -name "*.bak" -delete
    
    echo "{{BOLD}}{{GREEN}}‚úÖ Version updated to {{new_version}}{{NORMAL}}"

