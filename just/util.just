# üìä Show git statistics
[group('util')]
git-stats:
    @echo "{{BOLD}}{{CYAN}}üìä Git Statistics{{NORMAL}}"
    @echo "{{BOLD}}{{CYAN}}================={{NORMAL}}"
    @echo ""
    @echo "{{YELLOW}}üìà Commit Count:{{NORMAL}}"
    @git rev-list --count HEAD 2>/dev/null || echo "Not a git repository"
