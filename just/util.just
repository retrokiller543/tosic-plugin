# üéõÔ∏è Show build configuration
[group('util')]
config:
    #!/usr/bin/env bash
    printf "{{BOLD}}{{CYAN}}üéõÔ∏è Build Configuration{{NORMAL}}\n"
    printf "{{BOLD}}{{CYAN}}====================={{NORMAL}}\n"
    printf "\n"
    
    printf "{{YELLOW}}Current justfile variables:{{NORMAL}}\n"
    printf "  Profile: {{profile}}\n"
    printf "  Target: $(if [ -n '{{target}}' ]; then echo '{{target}}'; else echo 'native'; fi)\n"
    printf "  Features: $(if [ -n '{{features}}' ]; then echo '{{features}}'; else echo 'default'; fi)\n"
    printf "  Verbose: {{verbose}}\n"
    printf "  Jobs: $(if [ -n '{{jobs}}' ]; then echo '{{jobs}}'; else echo 'auto'; fi)\n"
    printf "\n"
    
    printf "{{YELLOW}}Actual environment variables (as seen by just):{{NORMAL}}\n"
    printf "  PROFILE=%s\n" "${PROFILE:-dev}"
    printf "  TARGET=%s\n" "${TARGET:-}"
    printf "  FEATURES=%s\n" "${FEATURES:-}"
    printf "  VERBOSE=%s\n" "${VERBOSE:-0}"
    printf "  JOBS=%s\n" "${JOBS:-}"
    printf "\n"
    
    printf "{{YELLOW}}Rust environment variables:{{NORMAL}}\n"
    printf "  RUST_BACKTRACE=%s\n" "${RUST_BACKTRACE:-}"
    printf "  RUST_LOG=%s\n" "${RUST_LOG:-}"
    printf "  RUSTFLAGS=%s\n" "${RUSTFLAGS:-}"
    printf "\n"
    
    printf "{{YELLOW}}Override examples:{{NORMAL}}\n"
    printf "  PROFILE=release just build\n"
    printf "  TARGET=aarch64-apple-darwin just build\n"
    printf "  FEATURES=serde just build\n"
    printf "  VERBOSE=2 just build\n"
    printf "  JOBS=4 just build\n"

# =============================================================================
# Development Utilities
# =============================================================================

# üîÑ Update dependencies
[group('util')]
update:
    @echo "üîÑ Updating dependencies..."
    cargo update
    @echo "‚úÖ Dependencies updated"

# üîÑ Update specific dependency
[group('util')]
update-dep dep:
    @echo "{{BOLD}}{{YELLOW}}üîÑ Updating dependency: {{dep}}{{NORMAL}}"
    cargo update --package "{{dep}}"
    @echo "{{BOLD}}{{GREEN}}‚úÖ Dependency {{dep}} updated{{NORMAL}}"

# üìù Add dependency
[group('util')]
add-dep dep *features="":
    @echo "{{BOLD}}{{YELLOW}}üìù Adding dependency: {{dep}}{{NORMAL}}"
    @if [ -n "{{features}}" ]; then \
        cargo add "{{dep}}" --features "{{features}}"; \
    else \
        cargo add "{{dep}}"; \
    fi
    @echo "{{BOLD}}{{GREEN}}‚úÖ Dependency {{dep}} added{{NORMAL}}"

# üìù Add development dependency
[group('util')]
add-dev-dep dep *features="":
    @echo "{{BOLD}}{{YELLOW}}üìù Adding development dependency: {{dep}}{{NORMAL}}"
    @if [ -n "{{features}}" ]; then \
        cargo add "{{dep}}" --dev --features "{{features}}"; \
    else \
        cargo add "{{dep}}" --dev; \
    fi
    @echo "{{BOLD}}{{GREEN}}‚úÖ Development dependency {{dep}} added{{NORMAL}}"



# =============================================================================
# File Operations
# =============================================================================

# üîç Find files by pattern
[group('util')]
find-files pattern:
    @echo "{{BOLD}}{{YELLOW}}üîç Finding files matching: {{pattern}}{{NORMAL}}"
    find . -name "{{pattern}}" -not -path "./target/*" -not -path "./.git/*"

# üîç Search in source files
[group('util')]
search term:
    @echo "{{BOLD}}{{YELLOW}}üîç Searching for: {{term}}{{NORMAL}}"
    @if command -v rg &> /dev/null; then \
        rg "{{term}}" crates/ --type rust; \
    else \
        grep -r "{{term}}" crates/ --include="*.rs" || echo "No matches found"; \
    fi

# =============================================================================
# Workspace Management
# =============================================================================

# üèóÔ∏è Create new crate in workspace
[group('util')]
new-crate name:
    #!/usr/bin/env bash
    echo "{{BOLD}}{{BLUE}}üèóÔ∏è Creating new crate: {{name}}{{NORMAL}}"
    
    # Create crate directory and initialize
    mkdir -p crates/{{name}}
    cd crates/{{name}} && cargo init --lib
    
    echo "{{BOLD}}{{GREEN}}‚úÖ Crate {{name}} created in crates/{{name}}{{NORMAL}}"

# üìã List workspace crates
[group('util')]
list-crates:
    @echo "{{BOLD}}{{CYAN}}üìã Workspace Crates{{NORMAL}}"
    @echo "{{BOLD}}{{CYAN}}=================={{NORMAL}}"
    @echo ""
    @find crates/ -name Cargo.toml -exec grep -H "^name" {} \; | \
        sed 's|crates/||; s|/Cargo.toml:name = |: |; s|"||g'

# =============================================================================
# Performance Analysis
# =============================================================================

# ‚ö° Analyze build performance
[group('util')]
perf-build:
    @echo "{{BOLD}}{{BLUE}}‚ö° Analyzing build performance...{{NORMAL}}"
    time cargo build --timings --workspace
    @echo "{{CYAN}}üìä Check target/cargo-timings/ for detailed timing reports{{NORMAL}}"

# üìä Count lines of code
[group('util')]
lines:
    @echo "{{BOLD}}{{CYAN}}üìä Lines of Code{{NORMAL}}"
    @echo "{{BOLD}}{{CYAN}}================={{NORMAL}}"
    @echo ""
    @if command -v tokei &> /dev/null; then \
        tokei crates/; \
    elif command -v cloc &> /dev/null; then \
        cloc crates/; \
    else \
        echo "{{YELLOW}}Basic line count:{{NORMAL}}"; \
        find crates/ -name "*.rs" -exec wc -l {} \; | awk '{sum += $$1} END {print "Total Rust lines: " sum}'; \
    fi

# =============================================================================
